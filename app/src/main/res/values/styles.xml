<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo Global para Botones Principales -->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Estilo para Botones Secundarios -->
    <style name="ButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg_secondary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Estilo para Botones de Advertencia -->
    <style name="ButtonWarning" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg_warning</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Personaliza el color de fondo -->
        <item name="android:background">@color/white</item>
        <!-- Personaliza el color de los botones -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

</resources>
